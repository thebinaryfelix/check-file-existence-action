{
  "name": "file-existence-action",
  "version": "0.0.1",
  "repository": "https://github.com/thebinaryfelix/file-existence-action.git",
  "author": "Mateus FÃ©lix <thebinaryfelix@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "ncc build ./src/index.ts --license licenses.txt",
    "test": "jest --ci --no-cache --maxWorkers=50% --collectCoverage --detectOpenHandles",
    "test:dev": "jest --maxWorkers=50% --watch --detectOpenHandles",
    "prepare": "husky install",
    "release": "yarn test && yarn build && HUSKY=0 npx release-it"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "glob": "^8.0.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@release-it/bumper": "^4.0.0",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.0",
    "jest": "^29.2.1",
    "jest-watch-typeahead": "^2.2.0",
    "lint-staged": "^13.0.3",
    "news-fragments": "^2.0.7",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "npm": false,
    "plugins": {
      "news-fragments": {},
      "@release-it/bumper": {
        "out": [
          {
            "file": "package.json",
            "path": "version"
          }
        ]
      }
    }
  }
}
